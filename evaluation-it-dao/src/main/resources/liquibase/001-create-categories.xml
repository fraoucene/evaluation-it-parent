<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
                   logicalFilePath="com/fraoucene/evaluation-it/db/changesets/001-create-categories.xml">

    <changeSet id="create-categories-table" author="fraoucene">

        <createSequence schemaName="evaluation_it" sequenceName="SEQ_CATEGORIES"/>
        <createSequence schemaName="evaluation_it" sequenceName="SEQ_QCM"/>

        <createTable schemaName="evaluation_it" tableName="CATEGORIES">
            <column name="categories_id" type="BIGINT" defaultValueComputed="nextval('evaluation_it.SEQ_CATEGORIES')">
                <constraints nullable="false" primaryKey="true" primaryKeyName="CATEGORIES_DBID_PK"/>
            </column>
            <column name="title" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable schemaName="evaluation_it" tableName="QCM">
            <column name="qcm_id" type="BIGINT" defaultValueComputed="nextval('evaluation_it.SEQ_QCM')">
                <constraints nullable="false" primaryKey="true" primaryKeyName="QCM_DBID_PK"/>
            </column>
            <column name="title" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(800)">
                <constraints nullable="false"/>
            </column>
            <column name="connaissances_mesurees" type="varchar(800)">
                <constraints nullable="false"/>
            </column>
            <column name="metiers_vises" type="varchar(800)">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="create-categories-qcm-table" author="fraoucene">

        <createTable schemaName="evaluation_it" tableName="CATEGORIES_QCM">
            <column name="categories_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="qcm_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="categories_id"
                                 baseTableName="CATEGORIES_QCM"
                                 baseTableSchemaName="evaluation_it"
                                 constraintName="FK_CATEGORIES_QCM_1"
                                 referencedColumnNames="categories_id"
                                 referencedTableName="CATEGORIES"
                                 referencedTableSchemaName="evaluation_it"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>

        <addForeignKeyConstraint baseColumnNames="qcm_id"
                                 baseTableName="CATEGORIES_QCM"
                                 baseTableSchemaName="evaluation_it"
                                 constraintName="FK_CATEGORIES_QCM_2"
                                 referencedColumnNames="qcm_id"
                                 referencedTableName="QCM"
                                 referencedTableSchemaName="evaluation_it"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>

    </changeSet>

    <changeSet id="create-question-table" author="fraoucene">

        <createSequence schemaName="evaluation_it" sequenceName="SEQ_QUESTIONS"/>

        <createTable schemaName="evaluation_it" tableName="QUESTIONS">
            <column name="questions_id" type="BIGINT" defaultValueComputed="nextval('evaluation_it.SEQ_QUESTIONS')">
                <constraints nullable="false" primaryKey="true" primaryKeyName="CHOICES_DBID_PK"/>
            </column>
            <column name="qcm_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="QUESTIONS_DBID_FK" />
            </column>
            <column name="content" type="varchar(800)">
                <constraints nullable="false"/>
            </column>
            <column name="choice_one" type="varchar(600)">
                <constraints nullable="false"/>
            </column>
            <column name="choice_one_value" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="choice_two" type="varchar(600)">
                <constraints nullable="false"/>
            </column>
            <column name="choice_two_value" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="choice_three" type="varchar(600)">
                <constraints nullable="false"/>
            </column>
            <column name="choice_three_value" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="choice_four" type="varchar(600)">
                <constraints nullable="false"/>
            </column>
            <column name="choice_four_value" type="boolean">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="qcm_id"
                                 baseTableName="QUESTIONS"
                                 baseTableSchemaName="evaluation_it"
                                 constraintName="QUESTIONS_DBID_FK"
                                 referencedColumnNames="qcm_id"
                                 referencedTableName="QCM"
                                 referencedTableSchemaName="evaluation_it"/>

    </changeSet>

</databaseChangeLog>
